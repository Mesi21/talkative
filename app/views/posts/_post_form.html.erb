<%= bootstrap_form_with(model: @post, url: user_posts_path) do |f| %>
  
  <div class='form-group'>
    <h2>Add a new post in the name of <%= @current_user.name %></h2>
    <%= f.text_field :title, :placeholder => "Add Title", required: true, class: "form-control mb-4" %>
    <%= f.text_area :text, size: "50x15", :placeholder => "Add your post", required: true, class: "form-control" %>
    <%= f.submit "Add a New Post" %>
  </div>
<% end %>